    <select id="selectUserInfoBypage" resultType="com.example.demo.data.UserInfo"  >
        SELECT *
        FROM USER_INFO
        <if test="a!=null">
            <where>
                <if test="name!=null and name!=''"> name = #{name}</if>
                <if test="phone!=null and phone!=''">AND  phone = #{phone}</if>
            </where>
            LIMIT #{a},#{b}
        </if>
    </select>

    <delete id="delectById">
        DELETE
        FROM USER_INFO
            <where>
                id = #{id}
            </where>
    </delete>



    <!--更新UserInfo-->
    <update id="updateUserInfo"  parameterType="com.example.demo.data.UserInfo">
        update USER_INFO
        set age = #{age},
         name = #{name},
         phone = #{phone},
         sex = #{sex}
        where id = #{id}
    </update>


    <!--会员注册-->
    <insert id="addUserInfo"  parameterType="com.example.demo.data.UserInfo">
        INSERT INTO USER_INFO (id,name,phone,age,sex,create_time,remark)
        VALUES (#{id},#{name},#{phone},#{age},#{sex},#{createTime},#{remark})


    </insert>


